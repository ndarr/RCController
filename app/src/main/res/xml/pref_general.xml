<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="38400"
        android:entries="@array/pref_baudrate_titles"
        android:entryValues="@array/pref_baudrate_values"
        android:key="connection_baudrate"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="Set the baudrate for the UART connection"
        android:title="@string/pref_title_baudrate" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_databits_titles"
        android:entryValues="@array/pref_databits_values"
        android:key="connection_databits"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="Set the number of databits for the UART connection"
        android:title="@string/pref_title_databits" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_stopbits_titles"
        android:entryValues="@array/pref_stopbits_values"
        android:key="connection_stopbits"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="Set the number of stopbits for the UART connection"
        android:title="@string/pref_title_stopbits" />

</PreferenceScreen>
